@model UnajmljivanjeOprema

@{
	ViewBag.Title = "azuriranje unajmljene opreme";
}

	<form method="post"
		  asp-route-page="@ViewBag.Page"
		  asp-route-sort="@ViewBag.Sort"
		  asp-route-ascending="@ViewBag.Asscending">
		<div asp-validation-summary="All"></div>
		@*<input type="hidden" asp-for="Id" />*@
		<div class="form-group">
			<label asp-for="Naziv"></label>
			<div><span asp-validation-for="Naziv" class="text-danger"></span></div>
			<input asp-for="Naziv" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Vrijeme"></label>
			<div><span asp-validation-for="Vrijeme" class="text-danger"></span></div>
			<input asp-for="Vrijeme" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Trajanje"></label>
			<div><span asp-validation-for="Trajanje" class="text-danger"></span></div>
			<input asp-for="Trajanje" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Cijena"></label>
			<div><span asp-validation-for="Cijena" class="text-danger"></span></div>
			<input asp-for="Cijena" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Detalji"></label>
			<div><span asp-validation-for="Detalji" class="text-danger"></span></div>
			<input asp-for="Detalji" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="ReferentniTipId"></label>
			<div><span asp-validation-for="ReferentniTipId" class="text-danger"></span></div>
			<input asp-for="ReferentniTipId" class="form-control" />
		</div>
		<div class="text-center">
			<button class="btn btn-primary" type="submit">Spremi</button>
			<a asp-action="Index"
			   asp-route-page="@ViewBag.Page"
			   asp-route-sort="@ViewBag.Sort"
			   asp-route-ascending="@ViewBag.Asscending"
			   class="btn btn-danger">Odustani</a>
		</div>
	</form>