@model TestWebApp.ViewModels.JavniNatjecajViewModel

@{
	ViewData["title"] = "Javni natjecaj br. "+Model.Broj;
}

<div class="row justify-content-sm-center">
    <div class="col-sm-2">
        Nasa Ponuda: @Model.NasaPonuda.ToString()
    </div>
    <div class="col-sm-2">
        Dobitna Ponuda: @Model.DobitnaPonuda.ToString()
    </div>
    <div class="col-sm-1 text-right">
        <a asp-action="Edit"
           asp-route-id="@Model.Broj"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-sm btn-warning" title="Ažuriraj"
           target="_blank">
        <i class="fas fa-edit"></i></a>
        </div>
        <form asp-action="Delete" method="post"
              asp-route-page="@ViewBag.Page"
              asp-route-sort="@ViewBag.Sort"
              asp-route-ascending="@ViewBag.Ascending">
            <input type="hidden" name="Id" value="@Model.Broj" />
            <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
        </form>
        <div class="col-sm-1 text-right">
            <a asp-action="Index"
               asp-route-id="@Model.Broj"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               class="btn btn-sm btn-primary" title="Povratak"><i class="fas fa-undo-alt"></i></a>
        </div>
    </div>

<table class="table table-sm table-striped table-hover" id="tablejavninatjecaji">
    <thead>
        <tr>
            @{
                string[] nazivi = { "Id", "Vrijeme", "Nasa Ponuda", "Dobitna Ponuda", "Detalji"};
                bool[] sortable = { true, true, true, true, true, false};
                for (int i = 1; i <= nazivi.Length; i++)
                {
                    <th>
                        @if (sortable[i - 1])
                        {
                            <a asp-route-sort="@i"
                               asp-route-page="@ViewBag.Page"
                               asp-route-ascending="@(ViewBag.Sort == i ? !ViewBag.Ascending : true)">
                                @nazivi[i - 1]
                            </a>
                        }
                        else
                        {
                            @nazivi[i - 1]
                        }

                    </th>
                }
            }
            <th></th>

        </tr>
    </thead>

    <tbody>
            <tr>
                <td class="text-left">@Model.Broj</td>
                <td class="text-left">@Model.Vrijeme</td>
                <td class="text-left">@Model.NasaPonuda</td>
                <td class="text-left">@Model.DobitnaPonuda</td>
                <td class="text-left">@Model.Detalji</td>
                <td class="btn-group">
                </td>
            </tr>

    </tbody>
</table>

