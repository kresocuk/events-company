@model TestWebApp.ViewModels.OsobaViewModel

<tr>
	<td class="text-left">@Model.Id</td>
	<td class="text-left">@Model.Ime</td>
	<td class="text-left">@Model.Prezime</td>
	<td class="text-left">@Model.Email</td>
	
	<td>
		<a data-id="@Model.Id" class="btn btn-sm editajax" title="Ažuriraj">
			<i class="fas fa-edit"></i>
		</a>
	</td>
	<td>
		<form asp-action="Delete" method="post">
			<input type="hidden" name="Id" value="@Model.Id" />
			<button data-id="@Model.Id" type="submit" class="btn btn-sm btn-danger deleteajax" title="Obriši">
				<i class="fas fa-trash-alt"></i>
			</button>
		</form>
	</td>
</tr>