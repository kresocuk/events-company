@model TestWebApp.ViewModels.IznajmljivanjeOpremaViewModel

@{
	ViewBag.Title = "Iznajmljivanje - oprema";
}

<h2>Iznajmljivanje nove opreme!</h2>

<form asp-action="Create" method="post">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="OpremaId"></label>
		<div><span asp-validation-for="OpremaId" class="text-danger"></span></div>
		<input type="hidden" asp-for="OpremaId" data-autocomplete-placeholder="opremanaziv" />
		<input type="text" value="@Model.OpremaNaziv" class="form-control" data-autocomplete="oprema" 
			   data-autocomplete-placeholder-name="opremanaziv" />
	</div>
	<div class="form-group">
		<label asp-for="Detalji"></label>
		<div><span asp-validation-for="Detalji" class="text-danger"></span></div>
		<input asp-for="Detalji" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Cijena"></label>
		<div><span asp-validation-for="Cijena" class="text-danger"></span></div>
		<input asp-for="Cijena" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Vrijeme"></label>
		<div><span asp-validation-for="Vrijeme" class="text-danger"></span></div>
		<input asp-for="Vrijeme" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Trajanje"></label>
		<div><span asp-validation-for="Trajanje" class="text-danger"></span></div>
		<input asp-for="Trajanje" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Kontakt"></label>
		<div><span asp-validation-for="Kontakt" class="text-danger"></span></div>
		<input asp-for="Kontakt" class="form-control" />
	</div>

	<div class="text-center">
		<button class="btn btn-primary" type="submit">Dodaj</button>
		<a asp-action="Index" class="btn btn-danger">Odustani</a>
	</div>
</form>

@section styles{
	<link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
	<script src="~/lib/jqueryui/jquery-ui.js"></script>
	<script src="~/js/autocomplete.js"></script>
}