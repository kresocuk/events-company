@model Skladiste

@{
	ViewBag.Title = "azuriranje certifikata";
}

<form  method="post"
	  asp-route-page="@ViewBag.Page"
	  asp-route-sort ="@ViewBag.Sort"
	  asp-route-ascending="@ViewBag.Asscending"
	  >
	<div asp-validation-summary="All"></div>
	@*<input type="hidden" asp-for="Id" />*@
	<div class="form-group">
		<label asp-for="Naziv"></label>
		<div><span asp-validation-for="Naziv" class="text-danger"></span></div>
		<input asp-for="Naziv" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Lokacija"></label>
		<div><span asp-validation-for="Lokacija" class="text-danger"></span></div>
		<input asp-for="Lokacija" class="form-control" />
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Spremi</button>
		<a asp-action="Index" 
		   asp-route-page="@ViewBag.Page"
	  asp-route-sort ="@ViewBag.Sort"
	  asp-route-ascending="@ViewBag.Asscending"
		   class="btn btn-danger">Odustani</a>
	</div>
</form>