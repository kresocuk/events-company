@model TestWebApp.ViewModels.OpremaViewModel

    <tr>
        <td class="text-left">@Model.Id</td>
        <td class="text-left">
            @if (Model.ImaSliku)
            {
                <img src="@Url.Action("GetImage", "Oprema", new { invetarnibroj=Model.InventarniBroj })" class="malaslika" />
            }
        </td>
        <td class="text-left">@Model.InventarniBroj</td>
        <td class="text-left">@Model.Naziv</td>
        <td class="text-left">@Model.TipId</td>
        <td class="text-left">@Model.ReferentniTipId</td>
        <td class="text-left">@Model.SkladisteId</td>
        <td class="text-left text-nowrap">@Model.KupovnaVrijednost.ToString("C2")</td>
        <td class="text-left text-nowrap">@Model.KnjigovodstvenaVrijednost.ToString("C2")</td>
        <td class="text-left">@Model.VrijemeKupnje.ToString("dd.MM.yyyy.")</td>
        <td class="text-left">@Model.VrijemeAmortizacije</td>
        <td class="text-left">@Model.Opis</td>

        <td>
            <a data-id="@Model.Id" class="btn btn-sm editajax" title="Ažuriraj">
                <i class="fas fa-edit"></i>
            </a>
        </td>
        <td>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button data-id="@Model.Id" type="submit" class="btn btn-sm btn-danger deleteajax" title="Obriši">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </form>
        </td>
    </tr>