@model Oprema

@{
	ViewBag.Title = "Nova oprema";
}

<h2>Unos nove opreme!</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="InventarniBroj"></label>
		<div><span asp-validation-for="InventarniBroj" class="text-danger"></span></div>
		<input asp-for="InventarniBroj" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Naziv"></label>
		<div><span asp-validation-for="Naziv" class="text-danger"></span></div>
		<input asp-for="Naziv" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="VrijemeKupnje"></label>
		<div><span asp-validation-for="VrijemeKupnje" class="text-danger"></span></div>
		<input asp-for="VrijemeKupnje" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="KupovnaVrijednost"></label>
		<div><span asp-validation-for="KupovnaVrijednost" class="text-danger"></span></div>
		<input asp-for="KupovnaVrijednost" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="KnjigovodstvenaVrijednost"></label>
		<div><span asp-validation-for="KnjigovodstvenaVrijednost" class="text-danger"></span></div>
		<input asp-for="KnjigovodstvenaVrijednost" class="form-control" />
	</div>
    <div class="form-group">
        <label asp-for="TipId"></label>
        <div><span asp-validation-for="TipId" class="text-danger"></span></div>
        <select class="form-control" asp-for="TipId" asp-items="ViewBag.Tipovi">
            <option selected value="" disabled>Odaberite tip</option>
        </select>
    </div>
	<div class="form-group">
		<label asp-for="SkladisteId"></label>
		<div><span asp-validation-for="SkladisteId" class="text-danger"></span></div>
		<input asp-for="SkladisteId" class="form-control" />
	</div>
    <div class="form-group">
        <label asp-for="ReferentniTipId"></label>
        <div><span asp-validation-for="ReferentniTipId" class="text-danger"></span></div>
        <select class="form-control" asp-for="ReferentniTipId" asp-items="ViewBag.ReferentniTipovi">
            <option selected value="" disabled>Odaberite referentni tip</option>
        </select>
    </div>
	<div class="form-group">
		<label asp-for="VrijemeAmortizacije"></label>
		<div><span asp-validation-for="VrijemeAmortizacije" class="text-danger"></span></div>
		<input asp-for="VrijemeAmortizacije" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Slika"></label>
		<div><span asp-validation-for="Slika" class="text-danger"></span></div>
		<input type="file" name="slika" />
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Dodaj</button>
		<a asp-action="Index" class="btn btn-danger">Odustani</a>
	</div>
</form>